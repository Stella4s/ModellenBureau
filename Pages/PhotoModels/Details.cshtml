        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoModel.User.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhotoModel.User.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoModel.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhotoModel.Age)
