        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhotoModel.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoModel.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhotoModel.User.Email)
